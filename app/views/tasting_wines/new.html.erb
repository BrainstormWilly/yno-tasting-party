<%= render partial: "shared/title", locals: {title: "New Tasting Wine"} %>

<div class="panel panel-default">
  <div class="panel-heading">
    <h4 class="panel-title">Select Existing Wine</h4>
  </div>

  <div class="list-group">
    <% @wines.each do |w| %>
      <%= link_to w.full_name, tasting_wines_create_path(tasting_id: @tasting.id, wine_id: w.id), class: "list-group-item list-group-item-action", method: :put %>
    <% end %>
  </div>

  <div class="panel-footer">
    <%= link_to "Back to Edit Tasting", edit_tasting_path(@tasting), class:"btn btn-default" %>
    <%= link_to 'Add New Wine to List', new_wine_path, {remote: true, class: "btn btn-primary", 'data-toggle' => 'modal', 'data-target' => '#modal-window'} %>
  </div>
</div>

<div id="modal-window" class="modal fade" role="dialog" aria-labelledby="wineFormLabel" aria-hidden="true"></div>
