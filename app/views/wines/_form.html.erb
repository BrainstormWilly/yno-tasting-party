<div class="modal-panel">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="wineFormLabel"><%= title %></h3>
  </div>
  <%= form_for wine do |f| %>
  <div class="modal-body">
      <% if wine.errors.any? %>
        <div id="error_explanation" class="alert alert-danger">
          <h5><%= pluralize(wine.errors.count, "error") %> prohibited this wine from being saved:</h5>
          <ul>
          <% wine.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      <div class="form-group">
        <%= f.label :vintage, class: "form-label" %> <small>(0 = Non-Vintage)</small>
        <%= f.number_field :vintage, class: "form-control", step: 1 %>
      </div>
      <div class="form-group">
        <%= f.label :name, class: "form-label" %>
        <%= f.text_field :name, class: "form-control", placeholder: "eg.. Yno Wines Russian River '2 Clones' Pinot Noir" %>
      </div>
      <div class="form-group">
        <%= f.label :price, class: "form-label" %>
        <%= f.number_field :price, class: "form-control", step: 0.01 %>
      </div>
  </div>
  <div class="modal-footer">
    <button class="btn btn-default" data-dismiss="modal" aria-hidden="true">Close</button>
    <%= f.submit "Submit", class: "btn btn-primary" %>
  </div>
  <% end %>
</div>
